{
  "name": "apppos",
  "version": "2.0.3",
  "description": "AppPOS - Syst√®me de Point de Vente",
  "main": "main.js",
  "private": true,
  "author": "5sensprod",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "dev:electron": "concurrently \"vite\" \"cross-env NODE_ENV=development electron .\"",
    "dev:electron-only": "concurrently \"vite\" \"cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "prebuild:prod": "node ../scripts/prepare-production.js",
    "build:prod": "vite build && electron-builder",
    "postbuild:prod": "node ../scripts/copy-node-modules.js",
    "dist": "npm run prebuild:prod && npm run build:prod",
    "preview": "vite preview",
    "postbuild": "node ../scripts/copy-node-modules.js",
    "publish": "vite build && electron-builder --publish always"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "electron-log": "^5.3.1",
    "electron-updater": "^6.3.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.0.0",
    "cross-env": "^7.0.3",
    "electron": "29.0.0",
    "electron-builder": "^24.6.4",
    "vite": "^5.0.0"
  },
  "build": {
    "appId": "com.cinqsensprod.apppos",
    "productName": "AppPOS",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js"
    ],
    "extraResources": [
      {
        "from": "../AppServe",
        "to": "AppServe",
        "filter": [
          "**/*",
          "!node_modules/**",
          "!.git/**"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "../AppServe/node_modules",
        "to": "resources/AppServe/node_modules"
      }
    ],
    "directories": {
      "output": "../release"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/7zip-bin/**/*"
    ],
    "afterPack": "../scripts/afterPack.js",
    "publish": [
      {
        "provider": "github",
        "owner": "5sensprod",
        "repo": "AppPOS"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "runAfterFinish": true
    }
  }
}
